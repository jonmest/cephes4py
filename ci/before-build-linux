yum install -y libffi libffi-devel

if [ $(uname -m) == 'x86_64' ];
then
    TAG='x86_64';
else
    TAG='i386';
fi

curl -O https://cmake.org/files/v3.4/cmake-3.4.3-Linux-$TAG.sh
bash cmake-3.4.3-Linux-$TAG.sh --skip-license --prefix=/

